<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium)%>
        <div class="star-rating" data-score= <%= @avg_review %> ></div>
        <em><%= "#{@reviews.length} reviews" %></em>
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.title %></td>
              </tr>
              <tr>
                <td><strong>Description:</strong></td>
                <td><%= @movie.description %></td>
              </tr>
              <tr>
                <td><strong>Movie Length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Director:</strong></td>
                <td><%= @movie.director %></td>
              </tr>
              <tr>
                <td><strong>Rating:</strong></td>
                <td><%= @movie.rating %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_movie_review_path(@movie) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @movie.title %></h1>
        <p><%= @movie.description %></p>
        <% if @reviews.blank? %>
          <h3>No review just yet, would you like to add the first</h3>
          <%= link_to "Write a Review", new_movie_review_path(@movie) %>
          <% else %>
            <% @reviews.each do |review|%>
            <div class="reviews">
              <div class="star-rating" data-score=<%= review.rating %>></div>
              
              <p><%= review.comment %></p>
            </div>
            <% end %>
        <% end %>
        <div class="live-streaming">
        <%= video_tag @movie.video.url(:original), :size => "600x240", :controls => true%>
        <%= image_tag "Urban.jpg", :size => "320x240" %>
        <%= video_tag "Flash.mp4", :size => "520x340" %>
      </div>

      </div>
      
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
<script type="text/javascript">
  $(".star-rating").raty({
    path:'/assets/',
    readOnly:true,
    score: function(){
      return $(this).attr('data-score');
    }
  });

</script>